{
	"compilerOptions": {
	  /* Modules */
	  "target": "ESNext",
	  "lib": ["DOM", "DOM.Iterable", "ESNext"],
	  "module": "ESNext",
	  "skipLibCheck": true,
	  "rootDir": "./src",
	  "outDir": "./build",
	  "moduleResolution": "bundler",

	  /* Linting */
	  "strict": true,
	  "noUnusedLocals": true,
	  "noUnusedParameters": true,
	  "noFallthroughCasesInSwitch": true,
	  "noImplicitReturns": true
	}
  }
  