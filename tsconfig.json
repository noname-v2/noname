{
	"compilerOptions": {
	  "target": "ESNext",
	  "lib": ["DOM", "DOM.Iterable", "ESNext"],
	  "module": "ESNext",
	  "skipLibCheck": true,
	  "outDir": "./dist",
  
	  /* Bundler mode */
	  "moduleResolution": "bundler",
	  "allowImportingTsExtensions": true,
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "noEmit": true,
  
	  /* Linting */
	  "strict": true,
	  "noUnusedLocals": true,
	  "noUnusedParameters": true,
	  "noFallthroughCasesInSwitch": true
	},
	"include": ["src"]
  }
  